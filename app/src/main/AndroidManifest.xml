<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="friseurbarbers.mein.meinfriseur">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AcitivityScreen.LoginScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.RegistrationScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.VendorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AcitivityScreen.ListOfServices"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.AppointmentScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.LoginScreen1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.LoginScreen2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.LoginScreen3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AcitivityScreen.LoginScreen4"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/fb_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name=".AcitivityScreen.Welcome" />
        <activity android:name=".AcitivityScreen.UpdateProfile"
            />
        <activity android:name=".AcitivityScreen.BarberListName"
            android:parentActivityName=".AcitivityScreen.HomeScreen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".AcitivityScreen.SelectItemActivity" android:parentActivityName=".AcitivityScreen.HomeScreen"
            ></activity>
    </application>

</manifest>