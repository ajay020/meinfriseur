<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context=".SelectItemActivity">

    <EditText
        android:drawableRight="@drawable/search"
        android:id="@+id/et_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/tv_or_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_search_bar"
        android:text="or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableRight="@drawable/search"
        android:id="@+id/et_postal_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_or_text"
        />

    <TextView
        android:id="@+id/tv_gender_static"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_postal_code"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Gender : " />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_postal_code"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/tv_gender_static"
        android:gravity="center"
        android:text="Male" />

    <TextView
        android:background="@drawable/shape_rectangle"
        android:id="@+id/tv_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gender_static"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Major" />

    <TextView
        android:layout_marginTop="18dp"
        android:layout_below="@+id/tv_major"
        android:id="@+id/tv_major_item_selected"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/shape_rectangle"
        android:id="@+id/tv_specific"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_major_item_selected"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Specific" />

    <TextView
        android:layout_marginTop="18dp"
        android:layout_below="@+id/tv_specific"
        android:id="@+id/tv_specific_item_selected"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="search"
        android:id="@+id/tv_search"
        android:layout_margin="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>